# ============================================================
# Credit Card Statement Analyzer - Environment Variables
# ============================================================
# Copy this file to .env and fill in your actual values.
# NEVER commit the .env file to version control.
# ============================================================

# ---- Gmail IMAP Credentials ----
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# ---- IMAP Server Settings ----
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# ---- PDF Passwords ----
HDFC_PDF_PASSWORD=your_hdfc_pdf_password
IDFC_PDF_PASSWORD=your_idfc_pdf_password

# ---- Folder Paths (optional, defaults shown) ----
DOWNLOAD_FOLDER=data/raw_emails
OUTPUT_FOLDER=data/raw_emails/output
